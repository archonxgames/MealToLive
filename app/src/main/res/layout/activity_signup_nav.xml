<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical"
	android:weightSum = "100"
	android:background="@drawable/side_nav_bar"
	tools:context = "pbl.g12.sem1.mealtolive.SignupNavActivity">

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/p_nav_signup_button"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_weight="50"
		android:drawablePadding="-40dp"
		android:drawableTop="@drawable/personal"
		android:fontFamily="sans-serif"
		android:padding="12dp"
		android:text="@string/title_activity_signup_personal"
		android:textSize="18sp"
		android:typeface="normal" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/o_nav_signup_button"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_weight="50"
		android:drawablePadding="-50dp"
		android:drawableTop="@drawable/organization"
		android:fontFamily="sans-serif"
		android:padding="12dp"
		android:text="@string/title_activity_signup_organization"
		android:textSize="18sp"
		android:typeface="serif" />
</LinearLayout>
